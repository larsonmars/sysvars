{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Debug",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/test/harddisk/sysvars",
            "remoteProgram": "SYS:sysvars",
            "emulatorType": "winuae",
            "emulatorArgs": [
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/test/harddisk",
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Release",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/test/harddisk/sysvars",
            "emulatorType": "winuae",
            "emulatorArgs": [
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/test/harddisk",
            ],
            "preLaunchTask": "amigaassembly: release build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "FS-UAE Debug",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/test/harddisk/sysvars",
            "remoteProgram": "SYS:sysvars",
            "emulatorType": "fs-uae",
            "emulatorArgs": [
                "--hard_drive_0=${workspaceFolder}/test/harddisk",
                "--automatic_input_grab=0"
            ],
            "preLaunchTask": "amigaassembly: build"
        }
    ]
}